# Noldarim Environment Variables Example
# Copy this file to .env and customize as needed

# Database
# NOLDARIM_DATABASE_DRIVER=postgres
# NOLDARIM_DATABASE_HOST=localhost
# NOLDARIM_DATABASE_PORT=5432
# NOLDARIM_DATABASE_DATABASE=noldarim_db
# NOLDARIM_DATABASE_USERNAME=noldarim_user
# NOLDARIM_DATABASE_PASSWORD=secretpassword
# NOLDARIM_DATABASE_SSL_MODE=require

# Logging
# NOLDARIM_LOG_LEVEL=DEBUG
# NOLDARIM_LOG_DIR=/var/log/noldarim

# Container configuration
# NOLDARIM_CONTAINER_DEFAULT_IMAGE=golang:1.21
# NOLDARIM_CONTAINER_DOCKER_HOST=tcp://docker-host:2376
# NOLDARIM_CONTAINER_RESOURCE_LIMITS_MEMORY_MB=4096
# NOLDARIM_CONTAINER_RESOURCE_LIMITS_CPU_SHARES=2048

# Temporal
# NOLDARIM_TEMPORAL_HOST_PORT=temporal-server:7233
# NOLDARIM_TEMPORAL_NAMESPACE=production
# NOLDARIM_TEMPORAL_TASK_QUEUE=noldarim-prod-queue

# Git
# NOLDARIM_GIT_WORKTREE_BASE_PATH=/data/worktrees

# Server
# NOLDARIM_SERVER_PORT=9000